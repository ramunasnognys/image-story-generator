{
    "version": 2,
    "builds": [
      { 
        "src": "frontend/package.json",
        "use": "@vercel/next"
      },
      { "src": "api/process_image.py", "use": "@vercel/python" }
    ],
    "routes": [
      { "src": "/api/process-image", "dest": "/api/process_image.py" },
      { "src": "/(.*)", "dest": "/frontend/$1" }
    ]
  }